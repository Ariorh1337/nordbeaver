{
    "compilerOptions": {
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "incremental": true,
        "module": "esnext",
        "lib": [
            "esnext",
            "DOM"
        ],
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "noErrorTruncation": true,
        "importHelpers": true,
        "types": [ "node", "pixi.js", "gsap" ],
        "allowJs": true,
        "outDir": "./build",
        "skipLibCheck": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./build/**/*"
    ]
}
